library ResultDecoder {
    using Obi for Obi.Data;

    struct Result {
        uint64 px;
    }

    function decodeResult(bytes memory _data)
        internal
        pure
        returns (Result memory result)
    {
        Obi.Data memory data = Obi.from(_data);
        result.px = data.decodeU64();
    }
}



// @title Band price oracle.
contract SimplePriceDB {
    using SafeMath for uint256;
    using ResultDecoder for bytes;
    using ParamsDecoder for bytes;

    IBridge bridge;
    IBridge.RequestPacket req;

    mapping(string => IBridge.RequestPacket) public symbolToReq;

    constructor(IBridge bridge_) public {
         bridge = bridge_;
    }

    function setSymbol(string memory _symbol, IBridge.RequestPacket memory  _req) public {
        symbolToReq[_symbol] = _req;
    }


    // getPrice fetches the latest BTC/USD price value from the bridge contract and saves it to state.
    function getPrice(string memory symbol) public view returns(uint256){
       (IBridge.ResponsePacket memory res,) = bridge.getLatestResponse(symbolToReq[symbol]);
        ResultDecoder.Result memory result = res.result.decodeResult();

        return result.px;
    }
}
